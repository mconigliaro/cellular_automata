#!/usr/bin/env python

import argparse
from game_of_life import curses
from random import seed


parser = argparse.ArgumentParser(description="Conway's Game of Life demo")
parser.add_argument('--seed', help='random seed')
parser.add_argument('--population', type=float, default=33.33,
                    help='initial population as a percentage of the grid')
parser.add_argument('--delay', type=float, default=0.05,
                    help='refresh delay in seconds')
parser.add_argument('--theme', choices=curses.THEMES.keys(), default='default',
                    help='color theme')
args = parser.parse_args()

seed(args.seed)

curses.run(population=args.population, delay=args.delay, theme=args.theme)
